{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "rootDirs": [
            "src"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "incremental": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.css"
    ],
    "exclude": [
        "./node_modules/*",
        "./dist"
    ]
}
  